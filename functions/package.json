{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "cross-env NODE_ENV=development firebase serve --only functions",
    "shell": "firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy:alpha": "npm run config:set:alpha && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "config:set:alpha": "cross-env FIREBASE_ENV_PATH=../config/alpha/firebaseFunctionsEnv-alpha.json node firebaseEnvParser.js",
    "config:set:prod": "cross-env FIREBASE_ENV_PATH=../config/alpha/firebaseFunctionsEnv-prod.json node firebaseEnvParser.js",
    "test:dev": "cross-env NODE_ENV=development mocha --reporter spec --timeout 15000",
    "test:dev:debug": "cross-env NODE_ENV=development mocha --inspect test/test.online.js --timeout 15000",
    "test:alpha": "cross-env NODE_ENV=alpha-test mocha --reporter spec --timeout 15000",
    "test:alpha:debug": "cross-env NODE_ENV=alpha-test mocha --inspect test/test.online.js --timeout 15000",
    "test:prod": "cross-env NODE_ENV=production mocha --reporter spec --timeout 15000"
  },
  "dependencies": {
    "@heroiclabs/nakama-js": "^2.0.1",
    "bluebird": "^3.5.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "delay": "^3.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "firebase-admin": "^5.12.0",
    "firebase-functions": "^2.0.5",
    "jsdom": "11.11.0",
    "jsdom-global": "3.0.2",
    "moment": "^2.22.2",
    "promise-jsonfile": "^1.0.4"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-plugin-promise": "^3.8.0",
    "firebase-functions-test": "^0.1.2",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "sinon": "^6.0.1"
  },
  "private": true
}
